<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="styles/index.css" rel="stylesheet" type="text/css">
    <title>Gerenciador de Tarefas em Grupo</title>
</head>
<body>
    <header>
        <nav class="navbar">
            <ul class="navbar-options list">
                <li class="navbar-item">Dashboard</li>
                <li class="navbar-item">Novo grupo</li>
                <li class="navbar-item">Hoje</li>
            </ul>
        </nav>
        <div class="user-area">
            <div class="notification-container">
                <%- include ('../src/images/bell_icon.svg') %>
            </div>
            <div class="user-info">
              <p><%=user.name%></p>
            </div>
        </div>
    </header>
    <main class="main-content">
        <aside class="aside-menu">
            <p class="menu-title">Grupos</p>
            <ul class="menu-navbar list">
                <% user.groups.forEach((group) => { %>
                    <li class="menu-item" id=<%=group.id%>><%=group.name%></li>
                <% }) %>
            </ul>
        </aside>
        <div class="tasks-dashboard">
            <ul class="task-list list">
                <li class="task-item"></li>
                <li class="task-item"></li>
                <li class="task-item"></li>
                <li class="task-item"></li>
                <li class="task-item"></li>
                <li class="task-item"></li>
            </ul>
        </div>
    </main>
    <footer>

    </footer>

    <% if (!user) { %>
        <script>
            if (localStorage.getItem('authorization-token') && 
                localStorage.getItem('authorization-token') != null &&
                    localStorage.getItem('authorization-token' != undefined)) {
                        window.location.href = '/?token=' + localStorage.getItem('authorization-token')
            } else window.location.href = '/auth/login'           
        </script>
    <% } %>
    <script>
        const groups = "<%=user.groups%>"
    </script>
</body>
</html>